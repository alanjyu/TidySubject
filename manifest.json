{
  "manifest_version": 3,
  "name": "TidySubject",
  "version": "0.7.1",
  "description": "Declutter Re:, Fwd:, and Ext tags automatically.",
  "author": "Alan J. Yu",
  "permissions": ["compose", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "action": {
    "default_title": "Tidy",
    "default_icon": "icon.svg",
    "default_popup": "options.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tidysubject@alanjyu.com",
      "strict_min_version": "128.0"
    }
  }
}
