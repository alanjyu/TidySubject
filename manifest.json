{
  "manifest_version": 3,
  "name": "TidySubject",
  "version": "0.3.2",
  "description": "Declutter Re: Fwd: and EXT Tags.",
  "author": "Alan J. Yu",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "action": {
    "default_title": "TidySubject"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tidysubject@alanjyu.com",
      "strict_min_version": "128.0"
    }
  }
}
